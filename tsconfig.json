{
    "compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"listEmittedFiles": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"sourceMap": true,
		"jsx": "react",
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"codemirror": ["./ElectronClient/gui/NoteEditor/NoteBody/CodeMirror/codemirror.d.ts"]
		},
	},
    "include": [
        "ReactNativeClient/**/*",
        "ElectronClient/**/*",
        "CliClient/**/*",
	],
	"exclude": [
		"**/node_modules",
		"ElectronClient/dist/**/*",
	],
}
