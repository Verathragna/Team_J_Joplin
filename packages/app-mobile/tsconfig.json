{
	"extends": "../../tsconfig.json",
	"include": [
		"**/*.ts",
		"**/*.tsx",
	],
	"exclude": [
		//Files that don't need transpilation
		"**/node_modules",
		"gulpfile.ts",
		"tools/*.ts",

		// Note: *.test.ts are included in compilation to allow
		// for type checking based on ../../tsconfig.json
	],
	"compilerOptions": {
		"types": ["jest", "node"],
		"moduleSuffixes": [".ios", ".android", ".native", ""]
	}
}
